# PhishGuard API Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=PhishGuard API
APP_VERSION=1.0.0
DEBUG=false

# Model Configuration
MODEL_DIR=models/phishguard-model
MAX_LENGTH=256

# API Security
# IMPORTANT: Generate a strong API key for production!
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=your-secret-api-key-change-this-in-production

# CORS Settings
# Comma-separated list of allowed origins
# Use "*" for development only, specify exact origins in production
ALLOWED_ORIGINS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Content Limits
MAX_CONTENT_LENGTH=10000

# Logging
LOG_LEVEL=INFO
# Options: json, text
LOG_FORMAT=json

# Performance Monitoring
ENABLE_METRICS=true

# Server Configuration (for production)
HOST=0.0.0.0
PORT=8000
WORKERS=4
